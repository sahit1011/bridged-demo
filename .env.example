# Pinecone Configuration
# Get these values from https://app.pinecone.io/

# Your Pinecone API Key
PINECONE_API_KEY=your_pinecone_api_key_here

# Your Pinecone Environment (e.g., us-east-1-aws)
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# Index name (optional, defaults to 'bridged-demo')
PINECONE_INDEX_NAME=bridged-demo-articles

# LLM Provider API Keys (at least one required)
# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key - Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenRouter API Key - Get from https://openrouter.ai/keys (for free tier models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Application Settings
DEFAULT_LLM_PROVIDER=openai
DEFAULT_AGENT=custom
DATE_FORMAT=unified
DEVELOPMENT_MODE=true

# API Configuration (Optional)
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_DEBUG=true

# Agent Configuration (Optional)
CONFIDENCE_THRESHOLD=0.8

# Logging Configuration (Optional)
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development Settings (Optional)
ENABLE_CORS=true
API_PREFIX=/api/v1
